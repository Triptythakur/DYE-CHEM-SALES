<!-- JS Animation (unchanged) -->
<script>
    (function(){
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(e => {
                if(e.isIntersecting) {
                    e.target.classList.add('visible');
                }
            });
        }, { threshold: 0.12 });
        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
    })();

    (function(){
        const v = document.querySelector('.visual-card');
        if(!v) return;
        const limit = 10;
        document.querySelector('.hero-right').addEventListener('mousemove', (ev) => {
            const r = v.getBoundingClientRect();
            const cx = r.left + r.width/2;
            const cy = r.top + r.height/2;
            const dx = (ev.clientX - cx) / r.width;
            const dy = (ev.clientY - cy) / r.height;
            v.style.transform = `rotateX(${ -dy * limit }deg) rotateY(${ dx * limit }deg) scale(1.02)`;
        });
        document.querySelector('.hero-right').addEventListener('mouseleave', () => {
            v.style.transform = '';
        });
    })();
</script>
