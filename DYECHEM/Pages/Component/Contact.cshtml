@page
@model DYECHEM.Pages.Component.ContactModel

   @{
    Layout = "_Layout";

    ViewData["Title"] = "Contact Us";

}
@section Head {
    <title>Contact DYE CHEM SALES | Textile Dye & Chemical Supplier</title>
    <meta name="description" content="Get in touch with DYE CHEM SALES — your trusted textile dye and chemical supplier in New Delhi. Contact us for business inquiries, partnerships, or product support.">
    <meta name="keywords" content="DYE CHEM SALES contact, textile dye supplier, chemical supplier Delhi, reactive dyes, denim chemicals, textile auxiliaries, dye manufacturers India">
    <meta name="author" content="DYE CHEM SALES">
    <meta name="robots" content="index, follow">

    <!-- Open Graph Tags (for social media sharing) -->
    <meta property="og:title" content="Contact DYE CHEM SALES | Reach Out to Our Team">
    <meta property="og:description" content="Need textile dyes or chemicals? Contact DYE CHEM SALES — premium supplier of quality textile solutions.">
    <meta property="og:image" content="~/Images/contact-banner.jpg">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://yourdomain.com/contact">

    <!-- Canonical Link -->
    <link rel="canonical" href="https://yourdomain.com/contact" />
}

<!-- Contact Page Header -->
<div class="contact-header text-center text-white mt-5 py-5" style="background: linear-gradient(90deg, #4e73df, #1cc88a); border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">
    <h1 class="fw-bold">Get in Touch with DYE CHEM SALES</h1>
    <p class="lead">We are here to answer your queries and provide assistance.</p>
</div>

<div class="container my-5">
    <div class="row">
        <!-- Contact Info -->
        <div class="col-md-5">
            <div class="contact-card p-4 mb-4 shadow-sm rounded-3">
                <h4 class="fw-bold text-primary">Contact Information</h4>
                <p class="mb-1"><strong>Phone:</strong> +91 96481 44072</p>
                <p class="mb-1"><strong>Email:</strong> Dyechemsales1916@gmail.com</p>
                <p class="mb-1">
                    <strong>Address:</strong> Near Shri Ji Sweets, Ground Floor, 13/10, Block-B, Street Number 9,
                    Saroop Nagar, New Delhi, 110042
                </p>
                <p class="mt-3 text-muted">Our team is available Monday to Saturday, 9:00 AM – 6:00 PM.</p>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-7">
            <div class="contact-card p-4 mb-4 shadow-sm rounded-3">
                <h4 class="fw-bold text-success">Send Us a Message</h4>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Your Name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label">Subject</label>
                        <input asp-for="Subject" class="form-control" placeholder="Subject" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label">Message</label>
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Write your message..." required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-gradient text-white px-4 py-2" style="background: linear-gradient(90deg, #4e73df, #1cc88a); border: none; border-radius: 50px;">Send Message</button>
                </form>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7f9;
    }

    .contact-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .contact-card:hover {
            transform: translateY(-5px);
        }
</style>
