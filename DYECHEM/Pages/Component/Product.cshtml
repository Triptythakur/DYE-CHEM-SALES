@page
@model DYECHEM.Pages.Component.ProductModel
@{
    Layout = "_Layout";
}
@section Head {
    <title>Textile Dyes & Chemicals | DYE CHEM SALES Products</title>
    <meta name="description" content="Explore high-quality textile dyes and chemicals from DYE CHEM SALES. Our range includes silicon softeners, enzymes, desizers, brighteners, and sulphur dyes for perfect fabric finishing.">
    <meta name="keywords" content="textile dyes, textile chemicals, DYE CHEM SALES products, silicon softener, enzyme, desizer, optical brightener, sulphur dyes, denim chemicals, textile auxiliaries India">
    <meta name="author" content="DYE CHEM SALES">
    <meta name="robots" content="index, follow">

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content="DYE CHEM SALES — Textile Dyes & Chemical Products">
    <meta property="og:description" content="Discover the best textile dyes and finishing chemicals for cotton, denim, and blended fabrics. Trusted supplier in Delhi NCR.">
    <meta property="og:image" content="~/Images/products-banner.jpg">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://yourdomain.com/products">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="DYE CHEM SALES — Textile Dyes & Chemical Products">
    <meta name="twitter:description" content="High-quality textile dyes and chemical solutions for vibrant and durable fabrics.">
    <meta name="twitter:image" content="~/Images/Shade-Colors.jpg">

    <!-- Canonical Link -->
    <link rel="canonical" href="https://yourdomain.com/products" />
}

<!-- 🌤 Light Themed Product Page -->
<section class="product-hero container-fluid py-5">
    <div class="row align-items-center text-center text-md-start">
        <div class="col-md-6  pt-5 col-12 mb-4 mb-md-0">
            <div class="px-4">
                <h1 class="display-5 fw-bold text-primary">Our Products</h1>
                <h2 class="text-accent">Perfect Chemistry for Perfect Colors</h2>
                <img src="~/Images/Design.png" class="img-fluid w-50 my-4" alt="Design Image" />
                <h4 class="text-muted">Where Chemistry Creates Beauty</h4>
            </div>
        </div>
        <div class="col-md-4 col-12 ms-md-5 ">
            <div class="p-4 rounded-4  shadow bg-light-subtle pt-5">
                <h3 class="fw-semibold text-accent">Our Range – Science Behind Every Shade</h3>
                <p class="text-secondary">
                    At DYE CHEM SALES, we provide high-quality textile dyes and chemicals for cotton, denim, and blended fabrics.
                    Every product ensures vibrant colors, smooth finishing, and long-lasting performance.
                </p>
               
            </div>
        </div>
    </div>
</section>

<!-- 🌈 Product Categories -->
<div class="text-center mt-5">
    <h1 class="fw-bold text-accent">Products We Offer</h1>
    <p class="text-muted">Processing &amp; Finishing Chemicals</p>
</div>

<!-- 💠 Product Section -->
<section class="container py-5">
    <h2 class="text-center mb-4 text-primary">Our Products</h2>
    <p class="text-center text-muted mb-5">Perfect Chemistry for Perfect Colors</p>

    <!-- 🔹 First Row -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Silicon</h4>
                <p class="small text-muted">Chemical Type / Function: Silicone softener</p>
                <p class="small">Composition: (R₂SiO)n → Polydimethylsiloxane (PDMS)</p>
                <p class="small text-secondary">Provides smooth, silky, and elastic finish. Improves hand feel, softness, and tear strength. Water-repellent and durable.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Bio Polish</h4>
                <p class="small text-muted">Chemical Type / Function: Enzymatic treatment</p>
                <p class="small">Composition: Protein-based enzyme (C₃₀H₄₇N₉O₁₁)</p>
                <p class="small text-secondary">Removes microfibrils and surface fuzz. Enhances fabric smoothness and brightness. Prevents pilling.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Enzyme</h4>
                <p class="small text-muted">Chemical Type / Function: Desizing / Bio-wash enzyme</p>
                <p class="small">Composition: Amylase → C₆H₁₂O₆ units</p>
                <p class="small text-secondary">Breaks starch or cellulose molecules, smoothens the surface before dyeing. Eco-friendly alternative to harsh chemicals.</p>
            </div>
        </div>
    </div>
</section>

<!-- 🔹 Other Product Rows -->
<section class="container pb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Desizer</h4>
                <p class="small text-muted">Chemical Type / Function: Desizing agent (Pre-treatment chemical)</p>
                <p class="small text-secondary">Removes starch and size materials applied during weaving. Improves absorbency and ensures even dyeing and finishing.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">OT Paste</h4>
                <p class="small text-muted">Chemical Type / Function: Wetting agent</p>
                <p class="small">Composition: Sodium dioctyl sulfosuccinate → C₂₀H₃₇NaO₇S</p>
                <p class="small text-secondary">Reduces surface tension of water, ensuring even wetting of fabric and improved dye penetration.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Brightener</h4>
                <p class="small text-muted">Chemical Type / Function: Optical Brightening Agent</p>
                <p class="small text-secondary">Converts UV light to visible blue light, giving bright white appearance. Commonly used in cotton/polyester fabric.</p>
            </div>
        </div>
    </div>
</section>


<section class="container pb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">2B Ultra White</h4>
                <p class="small text-muted">Chemical Type / Function: Whitening agent </p>
                <p class="small text-secondary">Enhances whiteness and brightness; used after bleaching process for permanent white tone.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Hi SPL</h4>
                <p class="small text-muted">Chemical Type / Function: Soaping / washing agent</p>
             
                <p class="small text-secondary">Removes unfixed dyes after dyeing, improving color fastness and brilliance..</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Water Softener</h4>
                <p class="small text-muted">Chemical Type / Function:Sequestering / Chelating agent</p>
                <p class="small text-secondary">Eliminates hardness ions (Ca²⁺, Mg²⁺) from water to prevent scum formation and uneven dyeing. Improves overall process efficiency.</p>
            </div>
        </div>
    </div>
</section>
<section class="container pb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Dye Fixer</h4>
                <p class="small text-muted">Chemical Type / Function: Dye-fixing agent </p>
                <p class="small text-secondary">Enhances color fastness by forming a strong bond between dye molecules and fibers. Reduces color bleeding and improves wash fastness.</p>
            </div>
        </div>

       
</section>

<!-- 🧪 Sulphur Dyes -->
<section class="container text-center pb-5">
    <h2 class="text-primary fw-bold mb-4">Sulphur Dyes</h2>
    <div class="row g-4">
        @foreach (var dye in new[]{
        new {Name="Sulphur Black", Shade="Deep black"},
        new {Name="Sulphur Blue BRN", Shade="Blue"},
        new {Name="Sulphur Militery Green GM-100", Shade="Olive green"},
        new {Name="Sulphur Brown BS", Shade="Warm brown"},
        new {Name="Sulphur Brown CR", Shade="Reddish brown"},
        new {Name="Sulphur Grey", Shade="Grey"},
        new {Name="Sulphur Grey 905", Shade="Neutral grey"},
        new {Name="Sulphur Coffe Brown", Shade="Coffe brown"},
        new {Name="Sulphur Olive Green", Shade="Olive tone"},
        new {Name="Sulphur Green Blue CV", Shade="Greenish blue"},
        new {Name="Sulphur Khakhi 710", Shade="Classic khakhi"}
        })
        {
            <div class="col-md-4">
                <div class="card h-100 product-card p-4">
                    <h4 class="text-accent">@dye.Name</h4>
                    <p class="small text-muted">Shade: @dye.Shade</p>
                </div>
            </div>
        }
    </div>
</section>

<!-- 🧴 Wetting / Washing / Anti-staining -->
<section class="container text-center pb-5">
    <h2 class="text-primary fw-bold mb-4">Wetting / Washing / Anti-staining Auxiliaries</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">Wetting Agent</h4>
                <p class="small text-muted">Function: Surfactant</p>
                <p class="small text-secondary">Helps even wetting before dyeing.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">ABS</h4>
                <p class="small text-muted">Function: Auxiliary</p>
                <p class="small text-secondary">Prevents indigo back staining during denim wash.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 product-card p-4">
                <h4 class="text-accent">NID</h4>
                <p class="small text-muted">Function: Neutralizing</p>
                <p class="small text-secondary">Used after bleaching.</p>
            </div>
        </div>
    </div>
</section>
