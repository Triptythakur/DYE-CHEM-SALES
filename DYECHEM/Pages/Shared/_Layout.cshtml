<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DYECHEM</title>

    <!-- ✅ Basic SEO Meta Tags -->
    <meta name="description" content="DyeChem Sales - Trusted supplier of premium quality dyes, chemicals, and colorants for textile, industrial, and laboratory applications." />
    <meta name="keywords" content="DyeChem, dyes, chemicals, textile chemicals, industrial chemicals, colorants, laboratory supplies" />
    <meta name="author" content="DyeChem Sales" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.dyechemsales.com/" />

    <!-- ✅ Open Graph Tags for Social Media -->
    <meta property="og:title" content="DyeChem Sales - Quality Dyes & Chemicals Supplier" />
    <meta property="og:description" content="Explore a wide range of high-quality dyes and chemicals with DyeChem Sales. Trusted by industries for excellence and reliability." />
    <meta property="og:image" content="https://www.dyechemsales.com/images/preview.jpg" />
    <meta property="og:url" content="https://www.dyechemsales.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- ✅ Favicon -->
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <!-- ✅ Sitemap & Robots.txt (for SEO crawling) -->
    <link rel="sitemap" type="application/xml" href="~/sitemap.xml" />
    <meta name="robots" content="index, follow" />

    <!-- ✅ Fonts & Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DYECHEM.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Pacifico&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=BBH+Sans+Hegarty&family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+DE+Grund+Guides&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    @RenderSection("Head", required: false)



</head>

<body>
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top border-bottom">
        <div class="container-fluid px-4 py-2">
            <a class="navbar-brand fw-bold d-flex align-items-center text-success" asp-area="" asp-page="/Index">
                <span class="fs-3 me-2">DYE</span>
                <span class="text-dark">CHEM SALES</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center gap-lg-3">
                    <li class="nav-item"><a class="nav-link active-link" asp-area="" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Component/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Component/Product">Product</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Component/Carear">Career</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Component/Contact">Contact</a></li>
                    <li class="nav-item">
                        <a asp-page="/Component/Contact" class="btn btn-gradient text-white fw-semibold px-3 py-2 ms-lg-2">Get Quote</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid p-0 m-0">
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function(){
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(e => {
                    if(e.isIntersecting) {
                        e.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.12 });

            document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
